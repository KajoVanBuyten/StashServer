<%= form_for(@studio, html: {class: 'ui form'}) do |f| %>
<h4 class="ui dividing header">Create Studio</h4>
<div class="field">
  <div class="equal width fields">
    <div class="field">
      <label>Studio Name</label>
      <%= f.text_field :name, placeholder: 'Studio Name' %>
    </div>
  </div>
</div>
<%= f.button 'Create', class: "ui primary submit button" %>
<% end %>
