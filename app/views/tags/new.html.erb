<%= form_for(@tag, html: {class: 'ui form'}) do |f| %>
<h4 class="ui dividing header">Create Tag</h4>
<div class="field">
  <div class="equal width fields">
    <div class="field">
      <label>Tag Name</label>
      <%= f.text_field :name, placeholder: 'Tag Name' %>
    </div>
  </div>
</div>
<%= f.button 'Create', class: "ui primary submit button" %>
<% end %>
